# Local DB credentials (do NOT commit this file - it's in .gitignore)
# Replace placeholders before running the app
spring.datasource.url=jdbc:mysql://localhost:3306/accounting_db?useSSL=false&serverTimezone=UTC
spring.datasource.username=YOUR_DB_USER
spring.datasource.password=YOUR_DB_PASSWORD

# Optional: enable dev-friendly Hibernate behavior
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true

# Flyway baseline for local dev
spring.flyway.baseline-on-migrate=true

# Show Flyway activity in logs
logging.level.org.flywaydb=DEBUG

# Local JWT secret (must be at least 256 bits / 32 bytes). Do NOT commit.
# Generate with: openssl rand -hex 32
app.security.jwtSecret=REPLACE_WITH_STRONG_HEX_32_BYTES
app.security.jwtExpirationMs=3600000

# Disable/enable security locally for rapid dev/testing
app.security.enabled=true
